	<modelVersion>4.0.0</modelVersion>

	<groupId>org.javelus.snr</groupId>
	<artifactId>snr-server</artifactId>
	<version>0.0.1-SNAPSHOT</version>

	<name>snr-server</name>
	<url>http://maven.apache.org</url>

